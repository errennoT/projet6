{% extends 'base.html.twig'  %}

{% block title %}
Mot de passe
{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h1 class="h2 mb-3 font-weight-normal">Modifier le mdp de {{user.username}}</h1>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            {{ form_row(form.password.first) }}
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            {{ form_row(form.password.second) }}
        </div>
    </div>

    <div class="row justify-content-md-center">
        <button class="btn btn-primary mt-4">Modifier le mdp</button>
    </div>

    {{ form_end(form) }}

</div>
{% endblock %}