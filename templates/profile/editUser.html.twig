{% extends 'base.html.twig'  %}

{% block title %}
Modifier {{user.username}}
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h1 class="h2 mb-3 font-weight-normal">Modifier mon compte</h1>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-3 col-sm-6 mt-2 mb-2">
            <div class="card card-home m-1">
                {% if picture is empty %}
                <img class="card-img-top" src="{{ asset('images/default_picture.jpeg') }}" alt="" width="416px"
                    height="200px">
                {% else %}
                <img class="card-img-top" src="{{ asset('uploads/'~ picture.name) }}" alt="" width="416px"
                    height="200px">
                {% endif%}
                <div class="card-body d-flex justify-content-end">
                    <a class="btn btn-warning" href="{{path('picture_edit', {id: user.id})}}">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            {{ form_row(form.username) }}
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row justify-content-md-center">
        <button class="btn btn-primary mt-3 mb-4">Modifier</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}