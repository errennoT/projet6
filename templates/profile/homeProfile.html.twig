{% extends 'base.html.twig'  %}

{% block title %}
{{user.username}} - SnowTricks
{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h1 class="h2 mb-3 font-weight-normal">Compte {{user.username}}</h1>
        </div>
    </div>

    {% for message in app.flashes('success')%}
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="alert alert-success">
                {{ message }}
            </div>
        </div>
    </div>
    {% endfor %}

    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="list-group">
                <a href="{{path('user_edit', {id: user.id})}}" class="list-group-item list-group-item-action list-group-item-primary">Gestion du compte</a>
                <a href="{{path('password_edit', {id: user.id})}}" class="list-group-item list-group-item-action list-group-item-info">Modifier le mot de passe</a>
            </div>
        </div>
    </div>
    {% endblock %}