{% extends 'base.html.twig'  %}

{% block title %}
Ajouter un trick
{% endblock %}

{% block body %}

<div class="container mt-4">
    <div class="row justify-content-md-center">
        <div class="col-md-8">
            <h1 class="h3 mb-3 font-weight-normal">Créer un trick</h1>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row justify-content-md-center">
        <div class="col-md-8 mt-2">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-8 mt-2">
            {{ form_row(form.defaultPicture) }}
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-8">
            {{ form_row(form.description) }}
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-8">
            {{ form_row(form.category) }}
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-5">
            <hr>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <ul class="pictureTricks col-md-8"
            data-prototype="{{ form_widget(form.pictureTricks.vars.prototype)|e('html_attr') }}">
            {% for pictureTrick in form.pictureTricks %}
            <li class="list-unstyled">{{ form_row(pictureTrick.file) }}</li>

            
            {% endfor %}
        </ul>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-5">
            <hr>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <ul class="videoTricks col-md-8"
            data-prototype="{{ form_widget(form.videoTricks.vars.prototype)|e('html_attr') }}">
            {% for videoTricks in form.videoTricks %}
            <li class="list-unstyled">{{ form_row(videoTricks.url) }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-8 mt-2 mb-5">
            <button class="btn btn-success mb-2">Créer le trick</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}