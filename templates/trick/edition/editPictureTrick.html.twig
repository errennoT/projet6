{% extends 'base.html.twig'  %}

{% block title %}
Modifier une photo
{% endblock %}

{% block body %}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="h3 mb-3 font-weight-normal">Modifier une photo</h1>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-4 col-sm-6 mt-2">
            <div class="card card-home m-1">
                <img class="card-img-top" src="{{ asset('uploads/'~ pictureTrick.name) }}" alt="" width="416px"
                    height="200px">
            </div>
        </div>
    </div>



    {{form_start(form)}}
    <div class="row justify-content-center">
        <div class="col-md-4 mt-2">
            {{ form_row(form.file) }}
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mt-2">
            <button class="btn btn-primary ">Modifier la photo</button>
        </div>
    </div>

    {{form_end(form)}}
</div>

{% endblock %}