{% extends 'base.html.twig'  %}

{% block title %}
{{trick.name}}
{% endblock %}

{% block body %}

<div class="container mt-4">
    <div class="row justify-content-md-center">
        <div class="col-md-8">
            <h1 class="h3 mb-3 font-weight-normal">Modifier {{trick.name}}</h1>
        </div>
    </div>
    {{ form_start(form) }}

    <div class="row justify-content-md-center">
        <div class="col-md-8 mt-2">
            {{ form_row(form.defaultPicture) }}
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-8 mt-2">
            <button class="btn btn-primary ">Modifier le trick</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}