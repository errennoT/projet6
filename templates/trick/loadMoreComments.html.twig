{% for comment in comments %}
<li class="media mb-3">
    {% if comment.userId.pictureUser.name is not defined %}
    <img class="mt-3 mr-2 rounded-circle" src="/images/default_picture.jpeg" height="100px" width="100px">
    {% else %}
    <img class="mt-3 mr-2 rounded-circle" src="{{ asset('uploads/'~ comment.userId.pictureUser.name) }}" height="100px"
        width="100px">
    {% endif %}
    <div class="media-body ">
        <div class="card">
            <div class="card-body">
                <h5 class="mt-0 mb-1 card-title">{{ comment.userId.username | upper }}</h5>

                <p class="card-text">{{ comment.content | nl2br }}</p>

                <span class="badge badge-primary float-right">le
                    {{ comment.createdAt | date('d-m-Y Ã  H:i') }}</span>
            </div>
        </div>
    </div>
</li>
{% endfor %}